@model Web.Models.Provider.ListProviderViewModel

@{
    ViewBag.Title = "Favorite Providers";
}

<div class="text-center">
    <h1 class="display-4 mb-2" style="margin-top: -3%;">Favorite providers</h1>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="~/files/provider/777.jpeg" class="d-block w-100 h-50" alt="777">
            <div class="carousel-caption d-none d-md-block">
                <a class="btn btn-outline-light" asp-action="Index" asp-controller="Provider">Go to providers</a><br />
                <p class="mt-2">Hope is a good breakfast, but a bad supper.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/files/provider/hola.jpeg" class="d-block w-100 h-50" alt="Hola">
            <div class="carousel-caption d-none d-md-block">
                <a class="btn btn-outline-light" asp-action="Index" asp-controller="Provider">Go to providers</a><br />
                <p class="mt-2">After dinner sit a while, after supper walk a mile.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/files/provider/TAKE_AWAY.jpeg" class="d-block w-100 h-50" alt="TAKE AWAY">
            <div class="carousel-caption d-none d-md-block">
                <a class="btn btn-outline-light" asp-action="Index" asp-controller="Provider">Go to providers</a><br />
                <p class="mt-2">A hungry man is an angry man.</p>
            </div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br/>
<div class="row mb-5">
    @{ foreach (Web.Models.Provider.ProviderViewModel provider in Model.Providers)
        {
        @await Html.PartialAsync("_ProvidersList", provider) 
        }
    }
</div>
